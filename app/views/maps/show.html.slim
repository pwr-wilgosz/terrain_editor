p#notice = notice

#map-wrapper data-id==@map.id
  .header
    = link_to 'Dodaj nowÄ…', new_map_path, class: "btn btn-default"
    = link_to 'Edytuj', edit_map_path(@map), class: "btn btn-default" if can? :edit, @map
    h3 = @map.name
    span
      strong Made by:
      = " #{ @map.user }"
  = link_to map_path(@map.prev_map), class: "prev" do
    i.fa.fa-arrow-left.fa-5x
  .content
    .play-btn
      i.fa.fa-pause.fa-2x
  = link_to map_path(@map.next_map), class: "next" do
    i.fa.fa-arrow-right.fa-5x
